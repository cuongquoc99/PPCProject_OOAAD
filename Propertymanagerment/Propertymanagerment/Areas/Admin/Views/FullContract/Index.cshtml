@model IEnumerable<Propertymanagerment.Models.Full_Contract>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>
    html {
        width: fit-content;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        color:indigo;
        margin-top: 7px;
        margin-bottom: -7px;
    }

    .btn-primary {
        margin-left: 20px;
        margin-top: 5px;
    }

    .btn-primary:hover {
        font-weight: bold;
        color: yellow;
    }

    th {
        text-align: center;
        background-color: aqua;
        color: purple;
    }

    .btn-info:hover {
        font-weight: bold;
    }

    .btn-warning:hover {
        font-weight: bold;
    }

    .btn-danger:hover {
        font-weight: bold;
    }
    .btn-default:hover {
        font-weight: bold;
    }
</style>

<title>Quản Lý Hợp Đồng Thanh Toán Một Lần</title>

<h2>QUẢN LÍ HỢP ĐỒNG THANH TOÁN MỘT LẦN</h2>
<hr />
<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
        <tr>
            <th>
                Full Contract Code
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Year Of Birth
            </th>
            <th>
                SSN
            </th>
            <th>
                Customer Address
            </th>
            <th>
                Mobile:
            </th>
            <th>
                Date Of Contract
            </th>
            <th>
                Price
            </th>
            <th>
                Deposit
            </th>
            <th>
                Remain
            </th>
            <th>
                Status
            </th>
            <th>
                Property Code
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-weight: bold">
                @Html.DisplayFor(modelItem => item.Full_Contract_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year_Of_Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Contract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deposit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.Property_Code)
            </td>
            <td>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info" }) 
                </div>
                <p></p>
                <div>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-warning" })
                </div>
                <p></p>
                <div>
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-danger"})
                </div>
                <p></p>
                <div class="btn btn-default">
                    <a href="@Url.Action("Print", "FullContract", new { id = item.ID })" target="_blank">Print</a>
                </div>
            </td>
        </tr>
    }

    </table>
</div>